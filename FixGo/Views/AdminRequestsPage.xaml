<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixGo.Views.AdminRequestsPage"
             xmlns:models="clr-namespace:FixGo.Models"
             Title="Solicitudes Recibidas">
    <CollectionView x:Name="adminRequestList" Margin="15">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Ticket">
                <Border Stroke="DarkGray" StrokeShape="RoundRectangle 10" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="{Binding Servicio}" FontAttributes="Bold" FontSize="16" />
                        <Label Text="{Binding Subcategoria}" />
                        <Label Text="{Binding Dia}" />
                        <Label Text="{Binding Hora}" />
                        <Label Text="Estado: Pendiente" TextColor="OrangeRed" FontSize="12" />
                        <Button Text="Asignar a trabajador" Margin="0,10,0,0"
                        Clicked="OnAssignClicked"
                        CommandParameter="{Binding}" />
                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>