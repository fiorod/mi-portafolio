<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixGo.Views.AssignedRequestsPage"
             Title="Solicitudes Asignadas">
    <CollectionView x:Name="requestList"
                Margin="10"
                SelectionMode="Single"
                SelectionChanged="OnItemTapped">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border
                    Stroke="Gray"
                    StrokeThickness="1"
                    BackgroundColor="Transparent"
                    Margin="5"
                    Padding="10"
                    StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout>
                        <Label Text="{Binding Servicio}" FontAttributes="Bold" FontSize="16" />
                        <Label Text="{Binding Subcategoria}" />
                        <Label Text="{Binding Dia}" />
                        <Label Text="{Binding Hora}" />
                        <Label Text="Estado: Asignado" FontSize="12" TextColor="Gray" />

                        <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                            <Button Text="Aceptar" BackgroundColor="Green" TextColor="White"
                                    Clicked="OnAcceptClicked" CommandParameter="{Binding}" />
                            <Button Text="Rechazar" BackgroundColor="Red" TextColor="White"
                                    Clicked="OnRejectClicked" CommandParameter="{Binding}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>