<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixGo.Views.SearchWorkersPage"
             BackgroundColor="White"
             Title="">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header de usuario -->
            <Border Stroke="#E0E0E0"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="#F8FAFC"
                    Padding="15"
                    Margin="0,0,0,10"
                    Shadow="5,5,10,Black">  
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Image Source="account_circle.svg" HeightRequest="40" WidthRequest="40" />
                    <VerticalStackLayout Grid.Column="1" Padding="10,0,0,0">
                        <Label x:Name="userNameLabel" Text="" FontAttributes="Bold" />
                        <Label x:Name="userLocationLabel" Text="" FontSize="12" TextColor="Gray" />
                    </VerticalStackLayout>
                    <ImageButton Source="notifications.png"
                         Grid.Column="2"
                         BackgroundColor="Transparent"
                         HeightRequest="24"
                         WidthRequest="24"
                         Clicked="OnNotificationsClicked"/>
                </Grid>
            </Border>

            <Label Text="Trabajadores" FontAttributes="Bold" FontSize="20" />

            <VerticalStackLayout Padding="20" Spacing="15">
                <!-- Encabezado -->
                <Label Text="Filtrar por categoría:" FontAttributes="Bold" />
                <Picker x:Name="categoryPicker" Title="Seleccione una categoría" />
                <Button Text="Buscar Trabajadores" Clicked="OnBuscarClicked" />
                <Button Text="Limpiar Filtro" Clicked="OnLimpiarClicked" BackgroundColor="#EAEAEA" TextColor="Black" />

                <VerticalStackLayout x:Name="workersStack" Spacing="20" />
            </VerticalStackLayout>
        
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>