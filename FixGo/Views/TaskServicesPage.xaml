<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixGo.Views.TaskServicesPage"
             BackgroundColor="White"
             Title="">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header con nombre y dirección -->
            <Border Stroke="#E0E0E0"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="#F8FAFC"
                    Padding="15"
                    Margin="0,0,0,15"
                    Shadow="5,5,10,Black">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Image Source="account_circle.svg" HeightRequest="40" WidthRequest="40" />
                    <VerticalStackLayout Grid.Column="1" Padding="10,0,0,0">
                        <Label x:Name="userNameLabel" Text="" FontAttributes="Bold" />
                        <Label x:Name="userLocationLabel" Text="" FontSize="12" TextColor="Gray" />
                    </VerticalStackLayout>
                    <ImageButton Source="notifications.png"
                     Grid.Column="2"
                     BackgroundColor="Transparent"
                     HeightRequest="24"
                     WidthRequest="24"
                     Clicked="OnNotificationsClicked"/>
                </Grid>
            </Border>

            <!-- Título -->
            <Label Text="Tus trabajos" FontAttributes="Bold" FontSize="15" />

            <!-- Lista de servicios completados -->
            <CollectionView x:Name="TaskList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#E0E0E0"
                                StrokeShape="RoundRectangle 20"
                                BackgroundColor="#F8FAFC"
                                Padding="20"
                                Margin="0,0,0,10"
                                Shadow="3,3,6,Gray">

                            <Grid ColumnDefinitions="*,Auto">
                                <!-- Información -->
                                <VerticalStackLayout Spacing="5">
                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="Servicio:" FontAttributes="Bold"/>
                                        <Label Text="{Binding Servicio}" Grid.Column="1"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="Fecha:" FontAttributes="Bold"/>
                                        <Label Text="{Binding Dia}" Grid.Column="1"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="Subcategoría:" FontAttributes="Bold"/>
                                        <Label Text="{Binding Subcategoria}" Grid.Column="1"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="Hora:" FontAttributes="Bold"/>
                                        <Label Text="{Binding Hora}" Grid.Column="1"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="Encargado:" FontAttributes="Bold"/>
                                        <Label Text="{Binding Encargado}" Grid.Column="1"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="Empresa:" FontAttributes="Bold"/>
                                        <Label Text="{Binding Empresa}" Grid.Column="1"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>