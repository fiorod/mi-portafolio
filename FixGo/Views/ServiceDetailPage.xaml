<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixGo.Views.ServiceDetailPage"
             Title="Detalle del Servicio">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label x:Name="lblServicio" FontAttributes="Bold" FontSize="18" />
        <Label x:Name="lblSubcategoria" />
        <Label x:Name="lblDia" />
        <Label x:Name="lblHora" />
        <Label Text="Estado: En curso" TextColor="Gray" />

        <Button Text="Marcar como finalizado"
                BackgroundColor="Green" TextColor="White"
                Clicked="OnCompleteClicked" />
    </VerticalStackLayout>
</ContentPage>