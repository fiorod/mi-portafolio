<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="FixGo.Views.ServiceButton"
             x:Name="self">

    <Border BackgroundColor="#F5FAFD"
            Stroke="#E3EDF3"
            StrokeShape="RoundRectangle 20"
            Padding="15"
            HeightRequest="170"
            WidthRequest="170">
        <Border.GestureRecognizers>
            <TapGestureRecognizer
                Command="{Binding Command, Source={x:Reference self}}"
                CommandParameter="{Binding CommandParameter, Source={x:Reference self}}" />
        </Border.GestureRecognizers>

        <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
            <Image Source="{Binding Icon, Source={x:Reference self}}" 
                   HeightRequest="75" />
            <Label Text="{Binding Label, Source={x:Reference self}}"
                   FontSize="{Binding FontSize, Source={x:Reference self}}"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

    </Border>
</ContentView>