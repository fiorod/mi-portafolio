<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:FixGo.Views"
             x:Class="FixGo.Views.MainMenuPage"
             BackgroundColor="White"
             Title="">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Header con información de usuario -->
            <Border Stroke="#E0E0E0"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="#F8FAFC"
                    Padding="15"
                    Shadow="5,5,10,Black">  
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Image Source="account_circle.svg" HeightRequest="40" WidthRequest="40" />
                    <VerticalStackLayout Grid.Column="1" Padding="10,0,0,0">
                        <Label x:Name="userNameLabel" Text="" FontAttributes="Bold" />
                        <Label x:Name="userLocationLabel" Text="" FontSize="12" TextColor="Gray" />
                    </VerticalStackLayout>
                    <ImageButton Source="notifications.png"
                     Grid.Column="2"
                     BackgroundColor="Transparent"
                     HeightRequest="24"
                     WidthRequest="24"
                     Clicked="OnNotificationsClicked"/>
                </Grid>
            </Border>

            <!-- Título -->
            <Label Text="Servicios"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Start" />

            <!-- Grid donde se pintarán los botones desde el API -->
            <Grid x:Name="servicesGrid"
                  ColumnSpacing="5"
                  RowSpacing="10"
                  ColumnDefinitions="*,*">
                <!-- Los botones se agregan dinámicamente en MainMenuPage.xaml.cs -->
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>