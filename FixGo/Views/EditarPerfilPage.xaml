<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixGo.Views.EditarPerfilPage"
             Title="Editar Perfil"
             BackgroundColor="#FFFFFF">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            <Border Stroke="#E0E0E0"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="#F8FAFC"
                    Padding="15"
                    Shadow="5,5,10,Black">      
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Image Source="account_circle.svg" HeightRequest="40" WidthRequest="40" />
                    <VerticalStackLayout Grid.Column="1" Padding="10,0,0,0">
                        <Label x:Name="userNameLabel" Text="" FontAttributes="Bold" />
                        <Label x:Name="userLocationLabel" Text="" FontSize="12" TextColor="Gray" />
                    </VerticalStackLayout>
                    <ImageButton Source="notifications.png"
                     Grid.Column="2"
                     BackgroundColor="Transparent"
                     HeightRequest="24"
                     WidthRequest="24"
                     Clicked="OnNotificationsClicked"/>
                </Grid>
            </Border>
            
            <!-- Datos de perfil cargados del login -->
            <VerticalStackLayout Spacing="18">
                <Entry x:Name="usernameEntry" Placeholder="Nombre de usuario" />
                <Entry x:Name="emailEntry" Placeholder="Correo electrónico" Keyboard="Email" />
                <Entry x:Name="TelefonoEntry" Placeholder="Teléfono" Keyboard="Telephone" />
                <Entry x:Name="DireccionEntry" Placeholder="Dirección" />

            </VerticalStackLayout>

            <!-- Botón para guardar -->
            <Button Text="Guardar Perfil"
                    Clicked="OnGuardarPerfilClicked"
                    BackgroundColor="#5BA8D0"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontAttributes="Bold" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>