<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixGo.Views.ChangePasswordPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Encabezado de usuario -->
            <Border Stroke="#E0E0E0"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="#F8FAFC"
                    Padding="15"
                    Margin="0,0,0,130"
                    Shadow="5,5,10,Black">  
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Image Source="account_circle.svg" HeightRequest="40" WidthRequest="40" />
                    <VerticalStackLayout Grid.Column="1" Padding="10,0,0,0">
                        <Label x:Name="userNameLabel" Text="" FontAttributes="Bold" />
                        <Label x:Name="userLocationLabel" Text="" FontSize="12" TextColor="Gray" />
                    </VerticalStackLayout>
                    <ImageButton Source="notifications.png"
                                 Grid.Column="2"
                                 BackgroundColor="Transparent"
                                 HeightRequest="24"
                                 WidthRequest="24"
                                 Clicked="OnNotificationsClicked"/>
                </Grid>
            </Border>

            <!-- Título -->
            <Label Text="Cambio de Contraseña"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="Black" />

            <!-- Card de cambio de contraseña -->
            <Border Stroke="#E0E0E0"
                    StrokeShape="RoundRectangle 25"
                    BackgroundColor="#F1F6FA"
                    Padding="25"
                    Margin="0"
                    Shadow="5,5,10,Gray">

                <VerticalStackLayout Spacing="15">

                    <Entry x:Name="oldPasswordEntry"
                           Placeholder="Antigua Contraseña"
                           IsPassword="True"
                           BackgroundColor="#F1F6FA" />

                    <Entry x:Name="newPasswordEntry"
                           Placeholder="Nueva Contraseña"
                           IsPassword="True"
                           BackgroundColor="#F1F6FA" />

                    <Entry x:Name="confirmPasswordEntry"
                           Placeholder="Confirmar Contraseña"
                           IsPassword="True"
                           BackgroundColor="#F1F6FA" />

                    <Button Text="Guardar Cambios"
                            Clicked="OnChangePasswordClicked"
                            BackgroundColor="#B6D4E9"
                            TextColor="Black"
                            CornerRadius="10"
                            HeightRequest="45"
                            FontAttributes="Bold"
                            HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>