<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FixGo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FixGo.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="{StaticResource ShellBackground}"
    Shell.ForegroundColor="{StaticResource ShellSelected}"
    Shell.UnselectedColor="{StaticResource ShellUnselected}"
    Shell.TabBarBackgroundColor="{StaticResource ShellBackground}"
    Shell.TitleColor="{StaticResource ShellSelected}"
    Shell.TabBarForegroundColor="{StaticResource ShellSelected}"
    Shell.TabBarTitleColor="{StaticResource ShellSelected}"
    Shell.NavBarHasShadow="False">

    <TabBar>
        <ShellContent
        Title="Home"
        Icon="home.svg"
        Route="MainMenuPage"
        ContentTemplate="{DataTemplate views:MainMenuPage}" />

        <ShellContent
        Title="Solicitudes"
        Icon="description.svg"
            Route="TicketHistoryPage"
        ContentTemplate="{DataTemplate views:TicketHistoryPage}" />

        <ShellContent
        Title="Buscar"
        Icon="search.svg"
        Route="SearchPage"
        ContentTemplate="{DataTemplate views:SearchWorkersPage}" />
        
        <ShellContent
        Title="Perfil"
        Icon="account_circle.svg"
            Route="ProfilePage"
        ContentTemplate="{DataTemplate views:ProfilePage}" />
    </TabBar>
</Shell>
